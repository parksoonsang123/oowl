<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#86C1EF</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#86C1EF</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle"> @style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name ="android:background">@android:color/transparent   </item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item
            name="android:windowBackground">@drawable/splash_backgroud</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlNormal">@color/lightgray</item>
        <item name="android:textSelectHandle">@color/orange</item>
        <item name="android:textColorHighlight">@color/orange</item>
        <item name="android:textCursorDrawable">@color/orange</item>
    </style>

</resources>